set editing-mode vi
set keymap vi-command
# these are for vi-command mode
Control-l: clear-screen

set keymap vi-insert
# these are for vi-insert mode
Control-l: clear-screen 
"\e.": insert-last-argument
"\eh": backward-word
"\el": forward-word
"\e\177":backward-kill-word

set show-mode-in-prompt on
set vi-ins-mode-string "╰[\1\e[34m\2distek\1\e[0m\2]─[\1\e[32m\2INS\1\e[0m\2]─▶ \1\e[6 q\2"
set vi-cmd-mode-string "╰[\1\e[34m\2distek\1\e[0m\2]─[\1\e[33m\2NOR\1\e[0m\2]─▶ \1\e[2 q\2"


